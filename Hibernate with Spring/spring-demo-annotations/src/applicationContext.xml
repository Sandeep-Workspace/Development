<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">


	<context:annotation-config base-package="com.sandeep.spring.annotation"/>
	<!-- add below line to enable component scanning -->
	<context:component-scan base-package="com.sandeep.spring.annotation"/>

	<!-- adding code for properties file -->
	<context:property-placeholder location="classpath:fortune.properties"/>
		
</beans>





